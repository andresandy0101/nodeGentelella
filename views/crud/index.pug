doctype html
html(lang="en")
	head
		meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1")

		// Bootstrap
		link(href="/gantelella/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet")

		// Custom Theme Style
		link(href="/gantelella/build/css/custom.min.css" rel="stylesheet")

		title
			!= 'Gentelella'

	body(style="background: #fff; ")
		div(class="row")
			

			br
			br
			br
			div(class="col-md-12")
				div(class="col-md-1")
				div(class="col-md-3")
					ul(class="nav nav-tabs tabs-left")
							li(class="active")
								a(href="#model" data-toggle="tab") Model
							li
								a(href="#controller" data-toggle="tab") Controller
							li
								a(href="#crud" data-toggle="tab") CRUD
				div(class="col-md-7")
					div(class="tab-content")
							div(class="tab-pane active" id="model") 
								div(class="x_title")
									h3 Model
									div(class="clearfix")
								div(class="row")
									form(data-parsley-validate class="form-horizontal form-label-left" method='POST' action='/crud/generatorModel')
										div(class="form-group")
											label(class="control-label col-md-3 col-sm-3 col-xs-12" for="table_name") 
												!= "Table Name"
											div(class="col-md-6 col-sm-6 col-xs-12")
												input(type="text" list="tables" class="form-control col-md-7 col-xs-12" name="table_name" id="table_name" placeholder="Table" required="")
												datalist(id="tables")
													for table in tables
														option !{table[row]}
										div(class="form-group")
											label(class="control-label col-md-3 col-sm-3 col-xs-12" for="model_name") 
												!= "Model Name"
											div(class="col-md-6 col-sm-6 col-xs-12")
												input(type="text" class="form-control col-md-7 col-xs-12" name="model_name" id="model_name" placeholder="Model" required="")
										div(class="navbar-right")
											button(type="submit" class="btn btn-default submit") Submit
							div(class="tab-pane" id="controller") 
								div(class="x_title")
									h3 Controller
									div(class="clearfix")
								div(class="row")
									form(data-parsley-validate class="form-horizontal form-label-left" method='POST' action='/crud/generatorController')
										div(class="form-group")
											label(class="control-label col-md-3 col-sm-3 col-xs-12" for="controller_name") 
												!= "Controller Name"
											div(class="col-md-6 col-sm-6 col-xs-12")
												input(type="text" class="form-control col-md-7 col-xs-12" name="controller_name" id="controller_name" placeholder="Controller" required="")
										div(class="navbar-right")
											button(type="submit" class="btn btn-default submit") Submit
							div(class="tab-pane" id="crud") 
								div(class="x_title")
									h3 CRUD
									div(class="clearfix")
								div(class="row")
									form(data-parsley-validate class="form-horizontal form-label-left" method='POST' action='/crud/generator')
										div(class="form-group")
											label(class="control-label col-md-3 col-sm-3 col-xs-12" for="table") 
												!= "Table Name"
											div(class="col-md-6 col-sm-6 col-xs-12")
												input(type="text" list="tables" class="form-control col-md-7 col-xs-12" name="table" id="table" placeholder="Table" required="")
												datalist(id="tables")
													for table in tables
														option !{table[row]}
										div(class="form-group")
											label(class="control-label col-md-3 col-sm-3 col-xs-12" for="name") 
												!= "Name"
											div(class="col-md-6 col-sm-6 col-xs-12")
												input(type="text" class="form-control col-md-7 col-xs-12" name="name" id="name" placeholder="Name" required="")
										div(class="navbar-right")
											button(type="submit" class="btn btn-default submit") Submit

		// jQuery 
		script(src="/gantelella/vendors/jquery/dist/jquery.min.js")
		// Bootstrap 
		script(src="/gantelella/vendors/bootstrap/dist/js/bootstrap.min.js")
		//Sweetalert2
		script(src="/sweetalert2/dist/sweetalert2.all.min.js")

		if alert
			script.
				Swal(!{JSON.stringify(alert)});

		script. 
			$("#table_name").change(function() { $('#model_name').val($("#table_name").val().replace('_', '').replace('-', '')); });

			$("#table").change(function() { $('#name').val($("#table").val().replace('_', '').replace('-', '')); });

		