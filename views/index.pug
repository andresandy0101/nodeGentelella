extends layout

block content

	div
		a(class="hiddenanchor" id="signup")
		a(class="hiddenanchor" id="signin")

		div(class="login_wrapper")
			div(class="animate form login_form")
				section(class="login_content")
					form(method='POST' action='/login/access')
						h1 Login Form
						div
							input(type="text" class="form-control" name="g01_user" id="g01_user" placeholder="Username" required="")
						div
							input(type="password" class="form-control" name="g01_password" id="g01_password" placeholder="Password" required="")
						div
							button(type="submit" class="btn btn-default submit") Log in
							a(class="reset_pass" href="#") Lost your password?

						div(class="clearfix")

						div(class="separator")
							p(class="change_link") New to site? 
								a(href="#signup" class="to_register") Create Account
							

							div(class="clearfix")
							|
							div
								h1
									i(class="fa fa-paw") 
									!= 'Gentelella Alela!'
								p
									!= '©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms'

			div(id="register" class="animate form registration_form")
				section(class="login_content")
					form(method='POST' action='/login/register')
						h1 Create Account
						div
							input(type="text" class="form-control" name="g01_user" id="g01_user" placeholder="Username" required="")
						div
							input(type="email" class="form-control" name="g01_email" id="g01_email" placeholder="Email" required="")
						div
							input(type="password" class="form-control" name="g01_password" id="g01_password" placeholder="Password" required="")
						div
							button(type="submit" class="btn btn-default submit") Submit

						div(class="clearfix")

						div(class="separator")
							p(class="change_link")
								!= 'Already a member ? '
								a(href="#signin" class="to_register") Log in

							div(class="clearfix")
							|
							div
								h1
									i(class="fa fa-paw")
									!= 'Gentelella Alela!'
								p
									!= '©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms'